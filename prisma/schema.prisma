  CreditCard
  DebitCard
  BankTransfer
  PayPal
  ApplePay
  GooglePay
  Crypto
}

enum PaymentStatus {
  Pending
  Processing
  Completed
  Failed
  Canceled
  Refunded
}

enum SubscriptionStatus {
  Active
  Canceled
  Past_Due
  Unpaid
  Trialing
  Paused
}

enum InvoiceStatus {
  Draft
  Open
  Paid
  Void
  Uncollectible
}

