  Fraudulent
  ProductNotReceived
  ProductNotAsDescribed
  GeneralAdjustment
}

enum RefundStatus {
  Pending
  Succeeded
  Failed
  Canceled
}

enum OrganizationType {
  Company
  Agency
  Government
  Education
  Nonprofit
  Other
}